# Django Configuration (Minimal)
SECRET_KEY=change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,https://*.railway.app

# Google Gemini (LLM) API
GEMINI_API_KEY=your-gemini-api-key
# For speed, you can set flash-lite as the primary model
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_FALLBACK_MODEL=gemini-2.5-flash-lite
GEMINI_USE_VISION=true
# Lower temperature and output tokens help latency
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=1500

# Vision/PDF performance controls
# Lower DPI and limit pages/images to reduce processing time
GEMINI_PDF_DPI=200
GEMINI_MAX_PAGES=4
GEMINI_MAX_IMAGES=4

# Image preprocessing controls
# Use faster preprocessing and moderate scaling for speed
PREPROCESS_FAST=true
PREPROCESS_SCALE=1.5

# Static files (optional)
USE_WHITENOISE=False

# PDF font (optional)
# If set, ReportLab will use this Unicode TTF for embedded-text PDFs (e.g., to render Amharic/Ethiopic correctly)
# PDF_FONT_PATH=/usr/share/fonts/truetype/noto/NotoSansEthiopic-Regular.ttf
# PDF_FONT_NAME=CustomPDFUnicode